{
  "plugins": ["prettier"],
  "rules": {
    "no-console": "off",
    "max-depth": ["error", 1],
    "no-new": "off",
    "max-lines-per-function": ["error", 15],
    "max-params": ["error", 2],
    "eol-last": ["error", "always"],
    "comma-dangle": "off"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["__tests__/"],
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "airbnb-base"
  ]
}
